#import CommBasicObjects.*;

CommObjectsRepository DomainSpeech version 1.0 {

	CommObject CommSpeechInputEventParameter {
		confidence: Double
		topic: String
	}
	CommObject CommSpeechOutputMessage {
		time: CommTimeStamp
		reset: Boolean
		ttl: Float
		text: String
	}
	CommObject CommSpeechInputEventResult {
		text: String
		confidence: Double
		semantic: String
	}
	CommObject SpeechInputEventState {
		topic: String
		text: String
		semantic: String
		confidence: Double
	}
	CommObject CommAmbientNoise {
		noise_level: UInt32
	}
	CommObject CommObjectPlacementOutputMessage {
		objectType: String
		objectSize: Double[*]
		objectMass: Double
	}
	CommObject CommObjectDropOutputMessage {
		obj_carried_index: Int32
	}
	Enumeration SpeechInputTagType {
		SPEECH_SET_GRAMMAR
	}
	Enumeration SpeechOutputTagType {
		SPEECH_SET_VOLUME
	}
}
